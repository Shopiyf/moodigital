---
// src/layouts/Layout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  data-wf-domain="www.limova.ai"
  data-wf-page="6831d8ad2505f0a9d750317c"
  data-wf-site="6831d8ad2505f0a9d75030e4"
  lang="fr"
>
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    
    <link href="https://cdn.prod.website-files.com/6831d8ad2505f0a9d75030e4/css/limova-340d7c.webflow.shared.08c351829.min.css" rel="stylesheet" type="text/css"/>
    <link href="https://cdn.prod.website-files.com/6831d8ad2505f0a9d75030e4/css/limova-340d7c.webflow.6831d8ad2505f0a9d750317c-d36b627b4.min.css" rel="stylesheet" type="text/css"/>
    
    <link href="https://cdn.prod.website-files.com/6831d8ad2505f0a9d75030e4/6831e015aab234df5ac0490e_Flavicon.png" rel="shortcut icon" type="image/x-icon"/>
    
    <script is:inline>
      !function(o,c){var n=c.documentElement,t=" w-mod-";n.className+=t+"js",("ontouchstart"in o||o.DocumentTouch&&c instanceof DocumentTouch)&&(n.className+=t+"touch")}(window,document);
    </script>
  </head>
  
  <body data-scrolling-started="false" data-scrolling-direction="" data-nav-status="closed" data-modal-status="closed" class="u-mode-base">
    
    <div class="page-wrapper">
      
      <div class="custom--code">
        <style is:global>
          /* ------------------------- Scaling Font System ------------------------- */
          :root {
            --size-unit: 16;
            --size-container-ideal: 1440;
            --size-container-min: 1080px;
            --size-container-max: 1440px;
            --size-container: clamp(var(--size-container-min), 100vw, var(--size-container-max));
            --size-font: calc(var(--size-container) / (var(--size-container-ideal) / var(--size-unit)));
          }
          @media screen and (max-width: 991px) { :root { --size-container-ideal: 834; --size-container-min: 768px; --size-container-max: 991px; } }
          @media screen and (max-width: 767px) { :root { --size-container-ideal: 550; --size-container-min: 480px; --size-container-max: 767px; } }
          @media screen and (max-width: 479px) { :root { --size-container-ideal: 390; --size-container-min: 320px; --size-container-max: 479px; } }
          
          html, body { font-size: var(--size-font); }

          /* Variables de couleurs et design extraites du code source */
          :root {
             --neutral--white: #ffffff;
             --neutral--dark: #060403;
             --brand--yellow: #dc8e21;
             --utility--error: #ff4d4d;
             
             /* Variables de mise en page */
             --_layout---site--width: 1440px;
             --_layout---site--margin: 2rem;
             --_layout---site--gutter: 1rem;
             --_layout---site--column-count: 12;

             /* Animation Variables */
             --ease-main: cubic-bezier(0.6, 0.6, 0, 1);
             --duration-default: 0.8s;
             --transition: all var(--duration-default) var(--ease-main);

             /* Gradients & Shadows identifiés */
             --gr-yellow: linear-gradient(310deg, rgba(255, 255, 255, 0) 49.03%, rgba(255, 255, 255, 0.5) 96.11%), linear-gradient(133deg, #f17324 -15.78%, #dc8e21 106.03%);
             --gr-glass: radial-gradient(100.01% 100% at 50.75% 0%, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0) 100%), rgba(255, 255, 255, 0.02);
             
             /* Alphas */
             --alpha--white-3: rgba(255, 255, 255, 0.03);
             --alpha--white-6: rgba(255, 255, 255, 0.06);
             --alpha--white-12: rgba(255, 255, 255, 0.12);
             --alpha--white-50: rgba(255, 255, 255, 0.5);
          }

          /* Reset basique pour Webflow */
          img { max-width: 100%; display: inline-block; }
          
          /* Styles spécifiques masqués */
          .custom--code * { width: 0; height: 0; position: absolute; visibility: hidden; }
        </style>
      </div>

      <slot />

    </div>

    <script is:inline src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=6831d8ad2505f0a9d75030e4" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script is:inline src="https://cdn.prod.website-files.com/6831d8ad2505f0a9d75030e4/js/webflow.19fceb4f.95b84842f96bd6f6.js"></script>
    <script is:inline src="https://cdn.prod.website-files.com/gsap/3.14.2/gsap.min.js"></script>
    <script is:inline src="https://cdn.prod.website-files.com/gsap/3.14.2/ScrollTrigger.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  </body>
</html>