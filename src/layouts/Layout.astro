    <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  </body>
</html>

<style is:global>
  /* ========================================= */
  /* STYLES GLOBAUX EXTRAITS             */
  /* ========================================= */

  /* 1. SCALING FONT SYSTEM */
  :root {
    --size-unit: 16;
    --size-container-ideal: 1440;
    --size-container-min: 1080px;
    --size-container-max: 1440px;
    --size-container: clamp(var(--size-container-min), 100vw, var(--size-container-max));
    --size-font: calc(var(--size-container) / (var(--size-container-ideal) / var(--size-unit)));
  }
  @media screen and (max-width: 991px) { :root { --size-container-ideal: 834; --size-container-min: 768px; --size-container-max: 991px; } }
  @media screen and (max-width: 767px) { :root { --size-container-ideal: 550; --size-container-min: 480px; --size-container-max: 767px; } }
  @media screen and (max-width: 479px) { :root { --size-container-ideal: 390; --size-container-min: 320px; --size-container-max: 479px; } }
  html, body { font-size: var(--size-font); }

  /* 2. GRID SYSTEM */
  :root {
    --site--max-width: min(1440px, 100vw);
    --_layout---site--margin: 2rem;
    --_layout---site--column-count: 12;
    --_layout---site--gutter: 1rem;
    
    /* Variables de couleurs et design */
    --neutral--white: #ffffff;
    --neutral--dark: #060403;
    --brand--yellow: #dc8e21;
    --utility--error: #ff4d4d;
    --alpha--white-3: rgba(255, 255, 255, 0.03);
    --alpha--white-6: rgba(255, 255, 255, 0.06);
    --alpha--white-12: rgba(255, 255, 255, 0.12);
    --alpha--white-50: rgba(255, 255, 255, 0.5);
    --alpha--white-73: rgba(255, 255, 255, 0.73);

    /* Gradients */
    --gr-yellow: linear-gradient(310deg, rgba(255, 255, 255, 0) 49.03%, rgba(255, 255, 255, 0.5) 96.11%), linear-gradient(133deg, #f17324 -15.78%, #dc8e21 106.03%);
    --gr-glass: radial-gradient(100.01% 100% at 50.75% 0%, rgba(255, 255, 255, 0.04) 0%, rgba(255, 255, 255, 0) 100%), rgba(255, 255, 255, 0.02);
    --gr-pricing: linear-gradient(133deg, #f17324 -15.78%, #dc8e21 106.03%);

    /* Shadows */
    --sh-icon: 6px 12px 4px 0px rgba(0, 0, 0, 0.02), 4px 8px 3px 0px rgba(0, 0, 0, 0.15), 2px 4px 3px 0px rgba(0, 0, 0, 0.5), 1px 2px 2px 0px rgba(0, 0, 0, 0.85), 0px 0px 1px 0px rgba(0, 0, 0, 0.98);
    --sh-orange: 0px 0.25px 0.25px 0px rgba(0, 0, 0, 0.04), 0px 0.75px 0.75px 0px rgba(0, 0, 0, 0.06), 0px 2px 12px 0px rgba(0, 0, 0, 0.25), 0px 2px 12px 0px rgba(220, 142, 33, 0.25), 0px 6px 27px 0px rgba(220, 142, 33, 0.15), 0px 0px 9.9px 0px rgba(255, 255, 255, 0.06);
    --sh-glass: 0px 0px 30.5px 0px rgba(255, 255, 255, 0.06) inset;
    --sh-btn: 0px 1px 0px 0px rgba(255, 255, 255, 0.2) inset, 0px 1px 4px 0px rgba(255, 255, 255, 0.25) inset, 0px 0.25px 0.25px 0px rgba(0, 0, 0, 0.04), 0px 0.75px 0.75px 0px rgba(0, 0, 0, 0.06), 0px 2px 12px 0px rgba(0, 0, 0, 0.25), 0px 2px 12px 0px rgba(220, 142, 33, 0.25), 0px 6px 27px 0px rgba(220, 142, 33, 0.15), 0px 0px 9.9px 0px rgba(255, 255, 255, 0.06);

    /* Animation Variables */
    --ease-main: cubic-bezier(0.6, 0.6, 0, 1);
    --ease-out-smooth: cubic-bezier(0.22, 1, 0.36, 1);
    --duration-default: 0.8s;
    --duration-half: 0.45s;
    --animation-default: var(--duration-default) var(--ease-main);
    --transition: all var(--duration-default) var(--ease-main);
    
    --border-color: var(--alpha--white-3);
  }

  /* 3. RESET & UTILS */
  * { box-sizing: border-box; margin: 0; padding: 0; }
  html { scroll-behavior: smooth; height: auto; }
  body { 
    width: 100%; 
    min-height: 100%; 
    font-smoothing: antialiased; 
    -webkit-font-smoothing: antialiased;
    background-color: var(--neutral--dark);
    color: var(--neutral--white);
  }
  
  img { max-width: 100%; height: auto; display: block; }
  a { text-decoration: none; color: inherit; }
  
  /* Masquer la scrollbar */
  body::-webkit-scrollbar { display: none; }
  body { -ms-overflow-style: none; scrollbar-width: none; }

  /* 4. ATTRIBUTES & HELPERS */
  .hide { display: none !important; }
  @media screen and (min-width: 992px) { .hide-dd { display: none !important; } }
  @media screen and (max-width: 991px) { .hide-td { display: none !important; } .td-block { display: block !important; } }
  @media screen and (max-width: 767px) { .hide-ld { display: none !important; } .ld-block { display: block !important; } }

  .u-text-clamp-1 { display: -webkit-box; overflow: hidden; -webkit-line-clamp: 1; -webkit-box-orient: vertical; }
  .u-text-clamp-2 { display: -webkit-box; overflow: hidden; -webkit-line-clamp: 2; -webkit-box-orient: vertical; }
  
  /* 5. SPECIFIC ELEMENTS */
  /* Button Text Effect */
  .btn_wrap [data-button-animate-chars] span {
    display: inline-block;
    position: relative;
    text-shadow: 0px 1.3em currentColor;
    transform: translateY(0em);
    transition: transform 0.5s var(--ease-main);
  }
  .btn_wrap:hover [data-button-animate-chars] span {
    transform: translateY(-1.3em);
  }

  /* Glass Backgrounds */
  [data-bg='glass'] { background: var(--gr-glass); }
  [data-sh='glass'] { box-shadow: var(--sh-glass); }
  [data-b-opacity='3'] { --border-color: var(--alpha--white-3); }
  
  .u-bg-element::after {
      content: '';
      position: absolute;
      inset: 0px;
      z-index: 1;
      border-radius: inherit;
      border: 1px solid var(--border-color);
      pointer-events: none;
  }
  
  /* Header Fix */
  .header {
    position: fixed;
    top: 0; left: 0; right: 0;
    z-index: 999;
    padding: 1rem;
    transition: padding 0.4s var(--ease-main);
  }
  
  /* Ajustement si barre d'annonce présente (script dans AnnouncementBar.astro) */
  body.has-announcement .header {
    top: 2.5rem; /* Hauteur approx de la barre */
  }

  /* Padding pour le contenu principal car header fixe */
  main {
      padding-top: 6rem; /* Ajuster selon la hauteur du header */
  }

  /* Cacher les éléments pré-chargement */
  .custom--code * { width: 0; height: 0; position: absolute; visibility: hidden; }

  /* 6. TYPOGRAPHY */
  .text-s { font-size: 0.875rem; }
  .text-xs { font-size: 0.75rem; }
  .weight-500 { font-weight: 500; }
  .weight-600 { font-weight: 600; }
  .text-fade { color: var(--alpha--white-50); }
  .text-gold {
     background: var(--gr-yellow);
     -webkit-background-clip: text;
     -webkit-text-fill-color: transparent;
  }
</style>