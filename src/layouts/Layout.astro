import AnnouncementBar from '../components/AnnouncementBar.astro';
import Footer from '../components/Footer.astro'; // Assurez-vous de créer ce fichier ensuite

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html data-wf-domain="www.limova.ai" data-wf-page="6831d8ad2505f0a9d750317c" data-wf-site="6831d8ad2505f0a9d75030e4" lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    
    <!-- CSS Webflow (CRUCIAL : Charge le design de base) -->
