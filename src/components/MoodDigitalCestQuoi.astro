  pulse: `<svg viewBox="0 0 24 24" aria-hidden="true"><path d="M3.5 13.2h3.9l1.3-3.6c.2-.6 1-.6 1.2 0l1.6 5.3 2-6.7c.2-.6 1-.6 1.2 0l1.3 4.9h3.5a1 1 0 1 1 0 2h-4.3c-.5 0-.8-.3-.9-.7l-.5-2-2 6.7c-.2.6-1 .6-1.2 0l-1.6-5.3-.6 1.7c-.1.4-.5.7-.9.7H3.5a1 1 0 1 1 0-2Z"/></svg>`,
  star: `<svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2.5c.4 0 .8.2 1 .6l2.6 5.2 5.7.8c.9.1 1.2 1.2.6 1.8l-4.1 4 1 5.7c.2.9-.8 1.5-1.6 1.1L12 18.9 6.8 21.7c-.8.4-1.8-.2-1.6-1.1l1-5.7-4.1-4c-.6-.6-.3-1.7.6-1.8l5.7-.8 2.6-5.2c.2-.4.6-.6 1-.6Zm0 4 1.7 3.4c.2.3.5.6.9.6l3.7.5-2.7 2.6c-.3.2-.4.6-.3 1l.6 3.7-3.3-1.7a1.1 1.1 0 0 0-1 0l-3.3 1.7.6-3.7c.1-.4-.1-.8-.3-1L5.7 11l3.7-.5c.4 0 .7-.3.9-.6L12 6.5Z"/></svg>`,
};
---

<section id={id} class="mood-section" data-mood-section>
  <div class="mood-noise"></div>
  
  <div class="mood-bridge" aria-hidden="true"></div>

  <div class="mood-wrap">
    <header class="mood-head">
      <div class="mood-eyebrow reveal">
        <span class="dot" aria-hidden="true"></span>
        <span>{eyebrow}</span>
      </div>

      <h2 class="mood-title reveal">
        <span set:html={title} />
      </h2>
      <p class="mood-lead reveal">{lead}</p>

      <div class="mood-actions reveal">
        <a
          class="btn primary"
          href={ctaHref}
          target={ctaHref?.startsWith("http") ? "_blank" : undefined}
          rel={ctaHref?.startsWith("http") ? "noreferrer" : undefined}
        >
          <span>{ctaLabel}</span>
          <span class="arrow" aria-hidden="true">→</span>
          <div class="shine"></div>
        </a>

        <a class="btn ghost" href={secondaryHref}>
          <span>{secondaryLabel}</span>
        </a>
      </div>
    </header>

    <div class="mood-grid" role="list">
      {pillars.map((p) => (
        <article class="mood-card reveal" role="listitem">
          <div class="card-highlight"></div>
          <div class="icon-wrap">
             <div class="icon" aria-hidden="true" set:html={icons[p.icon] ?? icons.star} />
             <div class="icon-glow"></div>
          </div>
          <h3 class="card-title">{p.title}</h3>
          <p class="card-desc">{p.desc}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<script>
  (() => {
    const sections = document.querySelectorAll<HTMLElement>("[data-mood-section]");
    if (!sections.length) return;

    const prefersReduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    const finePointer = window.matchMedia("(pointer: fine)").matches;

    const io = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add("in");
            io.unobserve(e.target);
          }
        });
      },
      { threshold: 0.15 }
    );

    sections.forEach((section) => {
      io.observe(section);

      if (prefersReduced || !finePointer) return;

      let raf = 0;
      let lastX = 0;
      let lastY = 0;

      const apply = () => {
        raf = 0;
        section.style.setProperty("--mx", `${lastX}px`);
        section.style.setProperty("--my", `${lastY}px`);
      };

      const onMove = (e: PointerEvent) => {
        const r = section.getBoundingClientRect();
        lastX = e.clientX - r.left;
        lastY = e.clientY - r.top;

        if (!raf) {
          raf = requestAnimationFrame(apply);
        }
      };

      section.addEventListener("pointermove", onMove, { passive: true });
    });
  })();
</script>

<style>
  :root {
    --bg: #050505; /* Noir encore plus profond */
    --card: rgba(255, 255, 255, 0.03); /* Plus transparent pour l'effet verre */
    --card-border: rgba(255, 255, 255, 0.08);
    --text: #ffffff;
    --text-muted: rgba(255, 255, 255, 0.65);
    --amber: rgb(220, 140, 60);
    --amber-glow: rgba(220, 140, 60, 0.4);
  }

  .mood-section {
    position: relative;
    isolation: isolate;
    overflow: hidden;
    color: var(--text);
    background: var(--bg);
    margin-top: -56px;
    padding: calc(clamp(44px, 6vw, 86px) + 56px) 0 clamp(56px, 7vw, 96px);
    --mx: 50%;
    --my: 0%;
  }

  /* 1. TEXTURE NOISE : Ajoute un grain cinéma subtil */
  .mood-noise {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    opacity: 0.04;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  .mood-bridge {
    position: absolute;
    left: 0;
    right: 0;
    top: -140px;
    height: 300px;
    pointer-events: none;
    z-index: 2;
    background: radial-gradient(ellipse at top, rgba(20,20,20,1) 0%, rgba(5,5,5,0) 70%);
  }

  /* Grid Background Plus Subtile */
  .mood-section::before {
    content: "";
    position: absolute;
    inset: -60px;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.04) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
    mask-image: radial-gradient(circle at center, black 0%, transparent 80%);
  }

  /* Glow Effect Dynamique */
  .mood-section::after {
    content: "";
    position: absolute;
    inset: -100px;
    background:
      radial-gradient(600px circle at var(--mx) var(--my), 
        rgba(220, 140, 60, 0.12), 
        transparent 40%);
    opacity: 1;
    pointer-events: none;
    z-index: 1;
    mix-blend-mode: screen;
    transition: opacity 0.5s;
  }

  .mood-wrap {
    width: min(1120px, calc(100% - 40px));
    margin: 0 auto;
    position: relative;
    z-index: 3;
  }

  .mood-head {
    text-align: center;
    margin-bottom: clamp(40px, 6vw, 64px);
  }

  .mood-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 8px 16px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(8px);
    font-size: 11px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--amber);
    box-shadow: 0 4px 20px rgba(0,0,0,0.2);
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: currentColor;
    box-shadow: 0 0 10px currentColor;
  }

  /* 2. TITRE PREMIUM : Dégradé léger */
  .mood-title {
    margin: 24px auto 0;
    max-width: 20ch;
    font-size: clamp(32px, 6vw, 64px);
    line-height: 1.1;
    letter-spacing: -0.03em;
    font-weight: 700;
    background: linear-gradient(to bottom right, #ffffff 30%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 20px 40px rgba(0,0,0,0.5);
  }

  .mood-lead {
    margin: 20px auto 0;
    max-width: 60ch;
    font-size: clamp(16px, 1.8vw, 19px);
    line-height: 1.7;
    color: var(--text-muted);
    font-weight: 400;
  }

  .mood-actions {
    margin-top: 32px;
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  /* BOUTONS OPTIMISÉS */
  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px 28px;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  /* Bouton Primary avec effet "Shine" */
  .btn.primary {
    background: #ece4d6;
    color: #0f0f0f;
    box-shadow: 
      0 0 0 1px rgba(255,255,255,0.1),
      0 10px 30px -5px rgba(0, 0, 0, 0.5);
  }

  .btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 
      0 0 0 1px rgba(255,255,255,0.4),
      0 20px 40px -5px rgba(0, 0, 0, 0.6);
  }

  /* Animation du reflet blanc qui passe */
  .shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 50%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(255,255,255,0) 0%,
      rgba(255,255,255,0.6) 50%,
      rgba(255,255,255,0) 100%
    );
    transform: skewX(-25deg);
    transition: 0.5s;
    pointer-events: none;
  }
  .btn.primary:hover .shine {
    left: 150%;
    transition: 0.7s ease-in-out;
  }

  .btn.ghost {
    background: rgba(255, 255, 255, 0.05);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  .btn.ghost:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
  }

  /* 3. CARTES AVEC VOLUME (GLASSMORPHISM) */
  .mood-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 24px;
  }

  .mood-card {
    grid-column: span 4;
    position: relative;
    padding: 32px 24px;
    border-radius: 24px;
    background: var(--card);
    border: 1px solid var(--card-border);
    
    /* Effet de volume (ombre interne + externe) */
    box-shadow: 
      inset 0 1px 0 rgba(255,255,255,0.1),
      0 20px 40px -10px rgba(0,0,0,0.5);
      
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    overflow: hidden;
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), border-color 0.3s ease;
    z-index: 1;
  }

  .mood-card:hover {
    transform: translateY(-5px);
    border-color: rgba(220, 140, 60, 0.3);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Petit dégradé blanc en haut de la carte pour simuler une lumière zénithale */
  .card-highlight {
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    opacity: 0.5;
  }

  /* Filet orange rotatif (Conservé car très stylé) */
  .mood-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 1.5px; /* Un peu plus épais */
    background: conic-gradient(from 0deg, transparent 0deg, var(--amber) 40deg, transparent 80deg);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .mood-card:hover::after {
    opacity: 1;
    animation: orbit 2s linear infinite;
  }

  @keyframes orbit {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* ICONES AVEC GLOW LOCAL */
  .icon-wrap {
    position: relative;
    width: 48px;
    height: 48px;
    margin-bottom: 20px;
    display: grid;
    place-items: center;
  }

  .icon {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    border-radius: 14px;
    background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.02));
    border: 1px solid rgba(255,255,255,0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  }

  .icon-glow {
    position: absolute;
    inset: 0;
    background: var(--amber);
    filter: blur(20px);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }
  
  .mood-card:hover .icon-glow {
    opacity: 0.3;
  }

  .icon :global(svg) {
    width: 22px;
    height: 22px;
    fill: #fff;
  }

  .card-title {
    margin: 0 0 10px;
    font-size: 20px;
    font-weight: 600;
    color: #fff;
  }

  .card-desc {
    margin: 0;
    color: var(--text-muted);
    line-height: 1.6;
    font-size: 15px;
  }

  /* ANIMATIONS */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s cubic-bezier(0.2, 0.8, 0.2, 1), transform 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .in .reveal {
    opacity: 1;
    transform: translateY(0);
  }

  .in .mood-eyebrow { transition-delay: 0.1s; }
  .in .mood-title { transition-delay: 0.2s; }
  .in .mood-lead { transition-delay: 0.3s; }
  .in .mood-actions { transition-delay: 0.4s; }
  .in .mood-card:nth-child(1) { transition-delay: 0.5s; }
  .in .mood-card:nth-child(2) { transition-delay: 0.6s; }
  .in .mood-card:nth-child(3) { transition-delay: 0.7s; }

  /* Responsive */
  @media (max-width: 980px) {
    .mood-card { grid-column: span 6; }
  }

  @media (max-width: 640px) {
    .mood-card { grid-column: span 12; }
    .mood-title { font-size: 36px; }
    .btn { width: 100%; }
  }
</style>