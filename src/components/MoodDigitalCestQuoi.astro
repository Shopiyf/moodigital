const {
  id = "mood-cest-quoi",
  eyebrow = "Cadre business + canva",
  title = "Moodigital, c'est une identite vendable. Pas un template joli.",
  lead = "10 jours pour poser ton offre, ton image et ta librairie Canva modulable. On construit le systeme, tu le rejoues en boucle.",
  pillars = [
    {
      title: "Cadre strate net",
      desc: "On clarifie la promesse, le tunnel et la voix. Tu sais quoi dire et ou.",
      icon: "gem",
    },
    {
      title: "Livrables qui vivent",
      desc: "Librairie Canva modulaire, prêtes pour reels, slides et emails.",
      icon: "pulse",
    },
    {
