---

<section id={id} class="mood" data-reveal>
  <div class="wrap">
    <header class="head">
      <div class="eyebrow">
        <span class="dot" aria-hidden="true"></span>
        <span>{eyebrow}</span>
      </div>

      <h2 class="title">{title}</h2>
      <p class="lead">{lead}</p>

      <div class="actions">
        <a class="btn primary" href={ctaHref} target={ctaHref?.startsWith("http") ? "_blank" : undefined} rel={ctaHref?.startsWith("http") ? "noreferrer" : undefined}>
          <span>{ctaLabel}</span>
          <span class="arrow" aria-hidden="true">â†’</span>
        </a>

        <a class="btn ghost" href={secondaryHref}>
          <span>{secondaryLabel}</span>
        </a>
      </div>
    </header>

    <div class="grid" role="list">
      {pillars.map((p) => (
        <article class="card" role="listitem">
          <div class="icon" aria-hidden="true" set:html={icons[p.icon] ?? icons.star} />
          <h3 class="cardTitle">{p.title}</h3>
          <p class="cardDesc">{p.desc}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<script>
  const root = document.querySelector("[data-reveal]");
  if (root) {
    const reduce = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

    if (reduce) {
      root.classList.add("in");
    } else {
      const io = new IntersectionObserver(
        (entries) => {
          for (const e of entries) {
            if (e.isIntersecting) {
              root.classList.add("in");
              io.disconnect();
              break;
            }
          }
        },
        { threshold: 0.18 }
      );
      io.observe(root);
    }
  }
</script>

<style>
  .mood{
    position: relative;
    padding: clamp(60px, 7vw, 96px) 0;
    color: rgba(255,255,255,.92);
    overflow: hidden;
    background: #070707;
  }

  /* Transition clean avec ce qu'il y a au-dessus (pas de "barre" sale) */
  .mood::before{
    content:"";
    position:absolute; inset:-40px;
    background:
      radial-gradient(900px 480px at 50% 0%,
        rgba(220,140,60,.16),
        rgba(0,0,0,0) 62%),
      radial-gradient(700px 520px at 20% 30%,
        rgba(255,255,255,.06),
        rgba(0,0,0,0) 70%);
    pointer-events:none;
  }

  /* Grid */
  .mood::after{
    content:"";
    position:absolute; inset:-60px;
    background:
      linear-gradient(to right, rgba(255,255,255,.08) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,.08) 1px, transparent 1px);
    background-size: 44px 44px;
    opacity: .18;
    pointer-events:none;
    mask-image: radial-gradient(closest-side at 50% 40%, rgba(0,0,0,1), rgba(0,0,0,.20) 55%, rgba(0,0,0,0) 74%);
    animation: gridMove 10s linear infinite;
  }

  @keyframes gridMove{
    from{ background-position: 0 0, 0 0; }
    to{ background-position: 44px 0, 0 44px; }
  }

  @media (prefers-reduced-motion: reduce){
    .mood::after{ animation: none; }
  }

  .wrap{
    width: min(1120px, calc(100% - 40px));
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .head{
    text-align: center;
    margin-bottom: clamp(26px, 4vw, 44px);
  }

  .eyebrow{
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 14px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(10,10,10,.55);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    font-size: 12px;
    letter-spacing: .14em;
    text-transform: uppercase;
    color: rgba(255,255,255,.78);
  }

  .dot{
    width: 8px; height: 8px;
    border-radius: 50%;
    background: rgb(220,140,60);
    box-shadow: 0 0 0 6px rgba(220,140,60,.16);
  }

  .title{
    margin: 18px auto 0;
    max-width: 18ch;
    font-size: clamp(30px, 5.4vw, 54px);
    line-height: 1.02;
    letter-spacing: -0.02em;
    font-weight: 800;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity .55s ease, transform .55s ease;
  }

  .lead{
    margin: 14px auto 0;
    max-width: 70ch;
    font-size: clamp(14px, 1.7vw, 18px);
    line-height: 1.7;
    color: rgba(255,255,255,.72);
    opacity: 0;
    transform: translateY(10px);
    transition: opacity .55s ease .08s, transform .55s ease .08s;
  }

  .actions{
    margin-top: 22px;
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity .55s ease .16s, transform .55s ease .16s;
  }

  .btn{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 18px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.14);
    text-decoration: none;
    font-weight: 750;
    letter-spacing: .01em;
    transition: transform .18s ease, background .18s ease, border-color .18s ease, box-shadow .18s ease;
    user-select: none;
  }

  .btn.primary{
    background: rgba(236, 228, 214, .95);
    color: rgba(15,15,15,.96);
    border-color: rgba(236, 228, 214, .22);
    box-shadow: 0 20px 60px rgba(0,0,0,.35);
  }
  .btn.primary:hover{ transform: translateY(-1px); box-shadow: 0 26px 80px rgba(0,0,0,.45); }

  .btn.ghost{
    background: rgba(10,10,10,.55);
    color: rgba(255,255,255,.86);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  .btn.ghost:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.22); }

  .arrow{ font-size: 16px; transform: translateY(-1px); }

  .grid{
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 14px;
  }

  .card{
    grid-column: span 4;
    position: relative;
    padding: 18px 18px 16px;
    border-radius: 18px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(10,10,10,.55);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    overflow: hidden;
    min-height: 150px;
    opacity: 0;
    transform: translateY(10px);
    transition: transform .55s ease, opacity .55s ease, border-color .22s ease;
  }

  /* HOVER: filet/bulles qui tourne (clean, pas cheap) */
  .card::before{
    content:"";
    position:absolute;
    inset:-2px;
    border-radius: 20px;
    background:
      radial-gradient(10px 10px at 18% 30%, rgba(220,140,60,.55), rgba(0,0,0,0) 60%),
      radial-gradient(12px 12px at 78% 60%, rgba(220,140,60,.45), rgba(0,0,0,0) 60%),
      repeating-conic-gradient(
        from 0deg,
        rgba(0,0,0,0) 0 14deg,
        rgba(220,140,60,.92) 14deg 18deg,
        rgba(0,0,0,0) 18deg 34deg
      );
    opacity: 0;
    filter: blur(.2px) drop-shadow(0 0 10px rgba(220,140,60,.18));
    -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    padding: 1px;
    transform: rotate(0deg);
    transition: opacity .20s ease;
    pointer-events:none;
  }

  .card:hover::before{
    opacity: 1;
    animation: spin 2.2s linear infinite;
  }

  @keyframes spin{
    to{ transform: rotate(360deg); }
  }

  .card:hover{
    border-color: rgba(255,255,255,.12);
  }

  .icon{
    width: 34px; height: 34px;
    border-radius: 12px;
    display: grid;
    place-items: center;
    background: rgba(220, 140, 60, .14);
    border: 1px solid rgba(220, 140, 60, .22);
    box-shadow: 0 16px 40px rgba(0,0,0,.35);
    margin-bottom: 12px;
  }

  .icon :global(svg){
    width: 18px; height: 18px;
    fill: rgba(255,255,255,.92);
    opacity: .95;
  }

  .cardTitle{
    margin: 0;
    font-size: 18px;
    letter-spacing: -0.01em;
    line-height: 1.15;
  }

  .cardDesc{
    margin: 10px 0 0;
    color: rgba(255,255,255,.70);
    line-height: 1.6;
    font-size: 14px;
  }

  /* Reveal */
  .mood.in .title,
  .mood.in .lead,
  .mood.in .actions{ opacity: 1; transform: translateY(0); }

  .mood.in .card{ opacity: 1; transform: translateY(0); }
  .mood.in .card:nth-child(1){ transition-delay: .20s; }
  .mood.in .card:nth-child(2){ transition-delay: .28s; }
  .mood.in .card:nth-child(3){ transition-delay: .36s; }

  /* Responsive */
  @media (max-width: 980px){
    .card{ grid-column: span 6; }
    .title{ max-width: 22ch; }
  }

  @media (max-width: 640px){
    .wrap{ width: min(1120px, calc(100% - 26px)); }
    .card{ grid-column: span 12; }
    .actions{ gap: 10px; }
    .btn{ width: 100%; }
  }

  @media (prefers-reduced-motion: reduce){
    .title, .lead, .actions, .card{ transition: none; transform: none; opacity: 1; }
    .card:hover::before{ animation: none; }
  }
</style>
