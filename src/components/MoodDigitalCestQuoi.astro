/**
 * MoodDigitalCestQuoi.astro
 * Version : CORRECTION BORDURE ANIMÉE (Technique Sandwich)
 */

const {
  id = "mood-cest-quoi",
  eyebrow = "MOODIGITAL.CO",
  title = "Moodigital, c'est un cadre. Pas une checklist.",
  lead = "Ici, on ne te donne pas une checklist. On te reconnecte à ce que tu portes déjà. Moodigital, c'est un espace de transformation business, vibratoire et profond.",
  pillars = [
    {
      title: "Pas de blablas inutiles",
      desc: "On va droit à l'essentiel. Une stratégie simple, nette, actionnable.",
      icon: "gem",
    },
    {
      title: "On avance à ton rythme",
      desc: "Structure, sans pression. Mais sans te laisser fuir.",
      icon: "pulse",
    },
    {
      title: "De l'humain avant tout",
      desc: "Coaching incarné, suivi réel, et un cadre qui tient dans le temps.",
      icon: "star",
    },
  ],
  ctaHref = "#",
  ctaLabel = "Réserve ton appel découverte",
  secondaryHref = "#offres",
  secondaryLabel = "Voir les offres",
} = Astro.props;

const icons = {
  gem: `<svg viewBox="0 0 24 24" aria-hidden="true"><path d="M8.2 3.5h7.6c.4 0 .8.2 1 .5l4 6a1.2 1.2 0 0 1-.1 1.5l-8.1 9.6a1.2 1.2 0 0 1-1.8 0L2.8 11.5A1.2 1.2 0 0 1 2.7 10l4-6c.2-.3.6-.5 1-.5Zm.6 2.2L5.5 10h3.3l2-4.3Zm6.4 0L13.2 10h3.3l2.6-4.3Zm-4.5 0L9 10h6l-1.7-4.3Zm-5.1 6.5 6.4 7.6 6.4-7.6H5.6Z"/></svg>`,
  pulse: `<svg viewBox="0 0 24 24" aria-hidden="true"><path d="M3.5 13.2h3.9l1.3-3.6c.2-.6 1-.6 1.2 0l1.6 5.3 2-6.7c.2-.6 1-.6 1.2 0l1.3 4.9h3.5a1 1 0 1 1 0 2h-4.3c-.5 0-.8-.3-.9-.7l-.5-2-2 6.7c-.2.6-1 .6-1.2 0l-1.6-5.3-.6 1.7c-.1.4-.5.7-.9.7H3.5a1 1 0 1 1 0-2Z"/></svg>`,
  star: `<svg viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2.5c.4 0 .8.2 1 .6l2.6 5.2 5.7.8c.9.1 1.2 1.2.6 1.8l-4.1 4 1 5.7c.2.9-.8 1.5-1.6 1.1L12 18.9 6.8 21.7c-.8.4-1.8-.2-1.6-1.1l1-5.7-4.1-4c-.6-.6-.3-1.7.6-1.8l5.7-.8 2.6-5.2c.2-.4.6-.6 1-.6Zm0 4 1.7 3.4c.2.3.5.6.9.6l3.7.5-2.7 2.6c-.3.2-.4.6-.3 1l.6 3.7-3.3-1.7a1.1 1.1 0 0 0-1 0l-3.3 1.7.6-3.7c.1-.4-.1-.8-.3-1L5.7 11l3.7-.5c.4 0 .7-.3.9-.6L12 6.5Z"/></svg>`,
};
---

<section id={id} class="mood-section" data-mood-section>
  <div class="mood-noise"></div>
  <div class="mood-bridge" aria-hidden="true"></div>

  <div class="mood-wrap">
    <header class="mood-head">
      <div class="mood-eyebrow reveal">
        <span class="dot" aria-hidden="true"></span>
        <span>{eyebrow}</span>
      </div>
      <h2 class="mood-title reveal"><span set:html={title} /></h2>
      <p class="mood-lead reveal">{lead}</p>
      <div class="mood-actions reveal">
        <a class="btn primary" href={ctaHref}>
          <span>{ctaLabel}</span>
          <span class="arrow" aria-hidden="true">→</span>
          <div class="shine"></div>
        </a>
        <a class="btn ghost" href={secondaryHref}>
          <span>{secondaryLabel}</span>
        </a>
      </div>
    </header>

    <div class="mood-grid" role="list">
      {pillars.map((p) => (
        <article class="mood-card reveal" role="listitem">
          <div class="card-border-gradient"></div>
          
          <div class="card-content">
            <div class="card-highlight"></div>
            <div class="icon-wrap">
               <div class="icon" aria-hidden="true" set:html={icons[p.icon] ?? icons.star} />
               <div class="icon-glow"></div>
            </div>
            <h3 class="card-title">{p.title}</h3>
            <p class="card-desc">{p.desc}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<script>
  (() => {
    const sections = document.querySelectorAll<HTMLElement>("[data-mood-section]");
    if (!sections.length) return;

    // Observer pour l'apparition
    const io = new IntersectionObserver((entries) => {
      entries.forEach((e) => {
        if (e.isIntersecting) {
          e.target.classList.add("in");
          io.unobserve(e.target);
        }
      });
    }, { threshold: 0.15 });

    sections.forEach((section) => {
      io.observe(section);
      
      // Glow Effect souris (optionnel, désactivable si conflit)
      const finePointer = window.matchMedia("(pointer: fine)").matches;
      if (finePointer) {
        section.addEventListener("pointermove", (e) => {
            const r = section.getBoundingClientRect();
            section.style.setProperty("--mx", `${e.clientX - r.left}px`);
            section.style.setProperty("--my", `${e.clientY - r.top}px`);
        }, { passive: true });
      }
    });
  })();
</script>

<style>
  :root {
    --bg: #050505;
    --card-bg: #0a0a0a; /* Fond opaque nécessaire pour la technique sandwich */
    --text: #ffffff;
    --text-muted: rgba(255, 255, 255, 0.65);
    --amber: rgb(220, 140, 60);
  }

  .mood-section {
    position: relative;
    isolation: isolate;
    overflow: hidden;
    color: var(--text);
    background: var(--bg);
    margin-top: -56px;
    padding: calc(clamp(44px, 6vw, 86px) + 56px) 0 clamp(56px, 7vw, 96px);
    --mx: 50%; --my: 0%;
  }

  .mood-noise {
    position: absolute; inset: 0; z-index: 0; opacity: 0.04; pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  .mood-bridge {
    position: absolute; left: 0; right: 0; top: -140px; height: 300px; pointer-events: none; z-index: 1;
    background: radial-gradient(ellipse at top, rgba(20,20,20,1) 0%, rgba(5,5,5,0) 70%);
  }
  
  /* Glow global de la section */
  .mood-section::after {
    content: ""; position: absolute; inset: -100px; pointer-events: none; z-index: 1;
    background: radial-gradient(600px circle at var(--mx) var(--my), rgba(220, 140, 60, 0.08), transparent 40%);
    mix-blend-mode: screen;
  }

  .mood-wrap {
    width: min(1120px, calc(100% - 40px));
    margin: 0 auto;
    position: relative;
    z-index: 3;
  }

  .mood-head { text-align: center; margin-bottom: clamp(40px, 6vw, 64px); }

  .mood-eyebrow {
    display: inline-flex; align-items: center; gap: 10px; padding: 8px 16px; border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.08); background: rgba(255, 255, 255, 0.02);
    font-size: 11px; letter-spacing: 0.2em; text-transform: uppercase; color: var(--amber);
  }
  .dot { width: 6px; height: 6px; border-radius: 50%; background: currentColor; box-shadow: 0 0 10px currentColor; }

  .mood-title {
    margin: 24px auto 0; max-width: 20ch; font-size: clamp(32px, 6vw, 64px);
    line-height: 1.1; font-weight: 700;
    background: linear-gradient(to bottom right, #ffffff 30%, #a0a0a0 100%);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
  }

  .mood-lead { margin: 20px auto 0; max-width: 60ch; font-size: clamp(16px, 1.8vw, 19px); color: var(--text-muted); }

  .mood-actions { margin-top: 32px; display: flex; justify-content: center; gap: 16px; flex-wrap: wrap; }

  .btn {
    position: relative; display: inline-flex; align-items: center; justify-content: center; gap: 12px;
    padding: 16px 28px; border-radius: 999px; text-decoration: none; font-weight: 600; font-size: 15px;
    transition: all 0.3s ease; overflow: hidden;
  }
  .btn.primary { background: #ece4d6; color: #0f0f0f; }
  .btn.primary:hover { transform: translateY(-2px); box-shadow: 0 10px 30px rgba(0,0,0,0.5); }
  .btn.ghost { background: rgba(255,255,255,0.05); color: #fff; border: 1px solid rgba(255,255,255,0.1); }
  .btn.ghost:hover { background: rgba(255,255,255,0.1); border-color: rgba(255,255,255,0.3); }

  .shine {
    position: absolute; top: 0; left: -100%; width: 50%; height: 100%;
    background: linear-gradient(to right, transparent, rgba(255,255,255,0.6), transparent);
    transform: skewX(-25deg); transition: 0.5s;
  }
  .btn.primary:hover .shine { left: 150%; transition: 0.7s ease-in-out; }

  /* --- GRID --- */
  .mood-grid { display: grid; grid-template-columns: repeat(12, 1fr); gap: 24px; }

  /* --- CARD REFAITE A NEUF --- */
  .mood-card {
    grid-column: span 4;
    position: relative;
    border-radius: 24px;
    /* Plus de padding ici, il est dans .card-content */
    background: transparent; 
    overflow: hidden; /* Coupe le gradient qui dépasse */
    isolation: isolate; /* Force un nouveau contexte pour le z-index */
    transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .mood-card:hover {
    transform: translateY(-5px);
  }

  /* 1. L'ANIMATION ROTATIVE (Derrière) */
  .card-border-gradient {
    position: absolute;
    top: 50%; left: 50%;
    /* On fait un carré géant centré pour que la rotation soit régulière */
    width: 200%; 
    height: 200%; 
    transform: translate(-50%, -50%);
    
    /* Le dégradé conique : Transparent > Orange > Transparent */
    background: conic-gradient(
      transparent 0deg, 
      transparent 80deg, 
      var(--amber) 120deg, 
      transparent 160deg, 
      transparent 360deg
    );
    
    opacity: 0; /* Invisible par défaut */
    z-index: 0;
    transition: opacity 0.3s ease;
    will-change: transform;
  }

  /* On active l'animation au survol */
  .mood-card:hover .card-border-gradient {
    opacity: 1;
    animation: spin 3s linear infinite;
  }

  @keyframes spin {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  /* 2. LE CONTENU (Devant) */
  .card-content {
    position: relative;
    /* C'est ici qu'on définit l'épaisseur de la bordure : 1.5px */
    inset: 1.5px; 
    height: calc(100% - 3px); /* Ajustement pour hauteur totale */
    background: rgba(20, 20, 20, 0.95); /* Fond très sombre mais pas noir total */
    border-radius: 23px; /* Juste un peu moins que le parent */
    padding: 32px 24px;
    z-index: 1; /* Passe devant le gradient */
    
    /* Touches visuelles */
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.08);
  }

  /* Pour mobile/réduit : bordure statique propre */
  @media (prefers-reduced-motion: reduce), (hover: none) {
    .mood-card { border: 1px solid rgba(255,255,255,0.1); }
    .card-border-gradient { display: none; }
    .card-content { inset: 0; height: 100%; border-radius: 24px; background: rgba(255,255,255,0.03); }
  }

  .card-highlight {
    position: absolute; top: 0; left: 20%; right: 20%; height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  }

  /* Icones */
  .icon-wrap { width: 48px; height: 48px; margin-bottom: 20px; position: relative; display: grid; place-items: center; }
  .icon {
    width: 100%; height: 100%; border-radius: 14px; z-index: 2;
    background: linear-gradient(135deg, rgba(255,255,255,0.08), rgba(255,255,255,0.01));
    border: 1px solid rgba(255,255,255,0.08);
    display: flex; align-items: center; justify-content: center;
  }
  .icon-glow {
    position: absolute; inset: 0; background: var(--amber); filter: blur(20px);
    opacity: 0; transition: opacity 0.3s; z-index: 1;
  }
  .mood-card:hover .icon-glow { opacity: 0.25; }
  .icon :global(svg) { width: 22px; height: 22px; fill: #fff; }

  .card-title { margin: 0 0 10px; font-size: 20px; font-weight: 600; color: #fff; }
  .card-desc { margin: 0; color: var(--text-muted); line-height: 1.6; font-size: 15px; }

  /* Reveal */
  .reveal { opacity: 0; transform: translateY(20px); transition: 0.8s cubic-bezier(0.2, 0.8, 0.2, 1); }
  .in .reveal { opacity: 1; transform: translateY(0); }
  .in .mood-eyebrow { transition-delay: 0.1s; }
  .in .mood-title { transition-delay: 0.2s; }
  .in .mood-lead { transition-delay: 0.3s; }
  .in .mood-actions { transition-delay: 0.4s; }
  .in .mood-card:nth-child(1) { transition-delay: 0.5s; }
  .in .mood-card:nth-child(2) { transition-delay: 0.6s; }
  .in .mood-card:nth-child(3) { transition-delay: 0.7s; }

  @media (max-width: 980px) { .mood-card { grid-column: span 6; } }
  @media (max-width: 640px) { .mood-card { grid-column: span 12; } .mood-title { font-size: 36px; } .btn { width: 100%; } }
</style>