<section id={id} class="mood-section" data-mood-section>
  <div class="mood-bridge" aria-hidden="true"></div>

  <div class="mood-wrap">
    <header class="mood-head">
      <div class="mood-eyebrow reveal">
        <span class="dot" aria-hidden="true"></span>
        <span>{eyebrow}</span>
      </div>

      <h2 class="mood-title reveal">{title}</h2>
      <p class="mood-lead reveal">{lead}</p>

      <div class="mood-actions reveal">
        <a
          class="btn primary"
          href={ctaHref}
          target={ctaHref?.startsWith("http") ? "_blank" : undefined}
          rel={ctaHref?.startsWith("http") ? "noreferrer" : undefined}
        >
          <span>{ctaLabel}</span>
          <span class="arrow" aria-hidden="true">→</span>
        </a>

        <a class="btn ghost" href={secondaryHref}>
          <span>{secondaryLabel}</span>
        </a>
      </div>
    </header>

    <div class="mood-grid" role="list">
      {pillars.map((p) => (
        <article class="mood-card reveal" role="listitem">
          <div class="icon" aria-hidden="true" set:html={icons[p.icon] ?? icons.star} />
          <h3 class="card-title">{p.title}</h3>
          <p class="card-desc">{p.desc}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<script>
  // On utilise un scope immédiat mais on s'assure de boucler sur toutes les sections
  (() => {
    const sections = document.querySelectorAll<HTMLElement>("[data-mood-section]");
    if (!sections.length) return;

    const prefersReduced = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    const finePointer = window.matchMedia("(pointer: fine)").matches;

    // Observer unique pour toutes les sections
    const io = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add("in");
            io.unobserve(e.target);
          }
        });
      },
      { threshold: 0.15 } // Seuil légèrement réduit pour mobile
    );

    sections.forEach((section) => {
      // 1. Activation Reveal
      io.observe(section);

      // 2. Glow Effect Logic (Desktop only)
      if (prefersReduced || !finePointer) return;

      let raf = 0;
      let lastX = 0;
      let lastY = 0;

      const apply = () => {
        raf = 0;
        // On force l'unité px pour éviter les bugs de parsing CSS
        section.style.setProperty("--mx", `${lastX}px`);
        section.style.setProperty("--my", `${lastY}px`);
      };

      const onMove = (e: PointerEvent) => {
        // getBoundingClientRect est relatif au viewport, clientX aussi.
        // La soustraction donne bien la position relative à la section.
        const r = section.getBoundingClientRect();
        lastX = e.clientX - r.left;
        lastY = e.clientY - r.top;

        if (!raf) {
          raf = requestAnimationFrame(apply);
        }
      };

      // Utilisation de pointermove pour meilleure compatibilité tactile/souris hybride
      section.addEventListener("pointermove", onMove, { passive: true });
    });
  })();
</script>

<style>
  :root {
    --bg: #070607;
    --card: rgba(10, 10, 10, 0.55);
    --line: rgba(255, 255, 255, 0.10);
    --text: rgba(255, 255, 255, 0.92);
    --muted: rgba(255, 255, 255, 0.70);
    --amber: rgb(220, 140, 60);
  }

  .mood-section {
    position: relative;
    isolation: isolate; /* Crée un contexte d'empilement propre */
    overflow: hidden;
    color: var(--text);
    background: var(--bg);
    margin-top: -56px;
    padding: calc(clamp(44px, 6vw, 86px) + 56px) 0 clamp(56px, 7vw, 96px);
    
    /* Valeurs par défaut pour le glow pour éviter le saut initial */
    --mx: 50%;
    --my: 0%;
  }

  .mood-bridge {
    position: absolute;
    left: 0;
    right: 0;
    top: -140px;
    height: 220px;
    pointer-events: none;
    z-index: 2; /* Au-dessus de la grille, mais attention aux clics */
    background: linear-gradient(
      to bottom,
      rgba(7, 6, 7, 0) 0%,
      rgba(7, 6, 7, 0.65) 45%,
      rgba(7, 6, 7, 1) 100%
    );
  }

  /* Grid Background */
  .mood-section::before {
    content: "";
    position: absolute;
    inset: -60px;
    background:
      linear-gradient(to right, rgba(255, 255, 255, 0.08) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.08) 1px, transparent 1px);
    background-size: 42px 42px;
    opacity: 0.22;
    pointer-events: none;
    z-index: 0;
    animation: gridDrift 10s linear infinite;
    
    /* Standardisation du mask */
    -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 28%, black 100%);
    mask-image: linear-gradient(to bottom, transparent 0%, black 28%, black 100%);
  }

  /* Glow Effect */
  .mood-section::after {
    content: "";
    position: absolute;
    inset: -2px;
    background:
      radial-gradient(520px 380px at var(--mx) var(--my),
        rgba(220, 140, 60, 0.22),
        rgba(220, 140, 60, 0.10) 38%,
        transparent 62%),
      radial-gradient(900px 640px at 70% 30%,
        rgba(255, 255, 255, 0.06),
        transparent 65%),
      radial-gradient(1200px 700px at 30% 10%,
        rgba(220, 140, 60, 0.07),
        transparent 68%);

    opacity: 0.95;
    pointer-events: none;
    z-index: 1; /* Juste au dessus de la grille */
    mix-blend-mode: screen;

    -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 22%, black 78%, transparent 100%);
    mask-image: linear-gradient(to bottom, transparent 0%, black 22%, black 78%, transparent 100%);

    animation: glowFloat 6.5s ease-in-out infinite;
  }

  @keyframes gridDrift {
    0% { background-position: 0 0, 0 0; }
    100% { background-position: 42px 0, 0 42px; }
  }

  @keyframes glowFloat {
    0%, 100% { transform: translate3d(0, 0, 0); }
    50% { transform: translate3d(0, -10px, 0); }
  }

  @media (prefers-reduced-motion: reduce) {
    .mood-section::before,
    .mood-section::after {
      animation: none;
    }
  }

  .mood-wrap {
    width: min(1120px, calc(100% - 40px));
    margin: 0 auto;
    position: relative;
    z-index: 3; /* Le contenu passe devant tout */
  }

  .mood-head {
    text-align: center;
    margin-bottom: clamp(26px, 4vw, 44px);
  }

  .mood-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 14px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.10);
    background: rgba(10, 10, 10, 0.55);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.78);
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--amber);
    box-shadow: 0 0 0 6px rgba(220, 140, 60, 0.16);
  }

  .mood-title {
    margin: 18px auto 0;
    max-width: 18ch;
    font-size: clamp(30px, 5.4vw, 54px);
    line-height: 1.02;
    letter-spacing: -0.02em;
    font-weight: 700;
  }

  .mood-lead {
    margin: 14px auto 0;
    max-width: 68ch;
    font-size: clamp(14px, 1.7vw, 18px);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.72);
  }

  .mood-actions {
    margin-top: 22px;
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 18px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    text-decoration: none;
    font-weight: 600; /* Standardisé */
    letter-spacing: 0.01em;
    transition: transform 0.18s ease, background 0.18s ease, border-color 0.18s ease, box-shadow 0.18s ease;
    user-select: none;
  }

  .btn.primary {
    background: rgba(236, 228, 214, 0.95);
    color: rgba(15, 15, 15, 0.96);
    border-color: rgba(236, 228, 214, 0.22);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
  }

  .btn.primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 26px 80px rgba(0, 0, 0, 0.45);
  }

  .btn.ghost {
    background: rgba(10, 10, 10, 0.55);
    color: rgba(255, 255, 255, 0.86);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .btn.ghost:hover {
    transform: translateY(-1px);
    border-color: rgba(255, 255, 255, 0.22);
  }

  .arrow {
    font-size: 16px;
    transform: translateY(-1px);
  }

  .mood-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 14px;
  }

  .mood-card {
    grid-column: span 4;
    position: relative;
    padding: 18px 18px 16px;
    border-radius: 18px;

    /* Bordure subtile de base */
    border: 1px solid rgba(255, 255, 255, 0.10);
    background: var(--card);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);

    overflow: hidden;
    min-height: 150px;

    transition: transform 0.22s ease;
    will-change: transform;
    /* Nécessaire pour que le ::after ne sorte pas si on utilise des filtres */
    z-index: 1;
  }

  .mood-card:hover {
    transform: translateY(-2px);
  }

  /* Filet orange : VERSION CORRIGÉE */
  .mood-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px; /* Épaisseur du filet */
    
    background:
      repeating-conic-gradient(
        from 0deg,
        rgba(220, 140, 60, 1) 0 4deg,
        transparent 4deg 20deg
      ),
      conic-gradient(
        from 0deg,
        rgba(220, 140, 60, 0),
        rgba(220, 140, 60, 0.75),
        rgba(220, 140, 60, 0)
      );

    /* Technique robuste : on masque l'intérieur (padding-box) pour ne garder que la bordure */
    -webkit-mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor; /* Webkit */
            mask-composite: exclude; /* Standard */

    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    
    /* Animation orbitale */
    filter: drop-shadow(0 0 14px rgba(220, 140, 60, 0.22));
  }

  .mood-card:hover::after {
    opacity: 1;
    animation: orbit 1.15s linear infinite;
  }

  @keyframes orbit {
    to { transform: rotate(360deg); }
  }

  @media (prefers-reduced-motion: reduce) {
    .mood-card:hover::after {
      animation: none;
      transform: rotate(45deg); /* Position fixe si pas d'anim */
    }
  }

  .icon {
    width: 34px;
    height: 34px;
    border-radius: 12px;
    display: grid;
    place-items: center;
    background: rgba(220, 140, 60, 0.14);
    border: 1px solid rgba(220, 140, 60, 0.22);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
    margin-bottom: 12px;
  }

  .icon :global(svg) {
    width: 18px;
    height: 18px;
    fill: rgba(255, 255, 255, 0.92);
    opacity: 0.95;
  }

  .card-title {
    margin: 0;
    font-size: 18px;
    letter-spacing: -0.01em;
    line-height: 1.15;
  }

  .card-desc {
    margin: 10px 0 0;
    color: rgba(255, 255, 255, 0.70);
    line-height: 1.6;
    font-size: 14px;
  }

  /* Reveal State */
  .reveal {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.55s ease, transform 0.55s ease;
  }

  /* La classe .in est ajoutée par le JS sur la section parent */
  .in .reveal {
    opacity: 1;
    transform: translateY(0);
  }

  .in .mood-eyebrow { transition-delay: 0.04s; }
  .in .mood-title { transition-delay: 0.08s; }
  .in .mood-lead { transition-delay: 0.14s; }
  .in .mood-actions { transition-delay: 0.20s; }
  .in .mood-card:nth-child(1) { transition-delay: 0.24s; }
  .in .mood-card:nth-child(2) { transition-delay: 0.32s; }
  .in .mood-card:nth-child(3) { transition-delay: 0.40s; }

  /* Responsive */
  @media (max-width: 980px) {
    .mood-card { grid-column: span 6; }
    .mood-title { max-width: 22ch; }
  }

  @media (max-width: 640px) {
    .mood-wrap { width: min(1120px, calc(100% - 26px)); }
    .mood-card { grid-column: span 12; }
    .mood-actions { gap: 10px; }
    .btn { width: 100%; }
  }
</style>