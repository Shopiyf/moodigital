            <div class="marquee-item">Etsy</div>
            <div class="marquee-item">Canva</div> <div class="marquee-item">Shopify</div>
            <div class="marquee-item">Pinterest</div>
            <div class="marquee-item">Instagram</div>
            <div class="marquee-item">Etsy</div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* --- Styles Locaux du Hero --- */

  .hero-section {
    position: relative;
    padding: 8rem 1.5rem 6rem;
    overflow: hidden;
    text-align: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  /* --- Arrière-plan Lumières --- */
  .hero-bg-wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .hero-bg-light {
    position: absolute;
    width: 40vw;
    height: 40vw;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.15;
  }

  .hero-bg-light.left {
    background: var(--brand--yellow); /* Orange/Jaune */
    top: -10%;
    left: -10%;
  }

  .hero-bg-light.right {
    background: #ffffff;
    top: 10%;
    right: -10%;
    opacity: 0.08;
  }

  /* --- Contenu --- */
  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  /* Visuels flottants (Avatars) */
  .hero-visuals-row {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .agent-avatar {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    border: 1px solid var(--alpha--white-12);
    overflow: hidden;
    margin-left: -0.75rem; /* Chevauchement */
    position: relative;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    transition: transform 0.3s ease;
  }

  .agent-avatar:first-child { margin-left: 0; }
  
  .agent-avatar:hover {
    transform: translateY(-5px) scale(1.1);
    z-index: 10;
  }

  .agent-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .glass-pill {
    background: var(--gr-glass);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--neutral--white);
    backdrop-filter: blur(10px);
  }

  /* Typographie */
  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--neutral--white);
  }

  .text-gradient {
    background: linear-gradient(135deg, #ffffff 0%, var(--brand--yellow) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Trustpilot Pill */
  .trust-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 99em;
    background: var(--alpha--white-6);
    border: 1px solid var(--alpha--white-6);
    font-size: 0.875rem;
    color: var(--neutral--white);
  }

  .dot {
    width: 4px;
    height: 4px;
    background: var(--alpha--white-50);
    border-radius: 50%;
  }

  .stars {
    color: #00b67a; /* Vert Trustpilot */
  }

  /* Boutons */
  .button-group {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 99em;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--brand--yellow);
    color: white;
    box-shadow: var(--sh-btn);
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -5px rgba(220, 142, 33, 0.4);
  }

  .btn-glass {
    background: var(--gr-glass);
    border: 1px solid var(--alpha--white-12);
    color: white;
    backdrop-filter: blur(10px);
  }

  .btn-glass:hover {
    background: var(--alpha--white-12);
  }

  /* Marquee */
  .marquee-container {
    margin-top: 4rem;
    width: 100%;
    max-width: 800px;
    opacity: 0.7;
  }

  .marquee-label {
    font-size: 0.875rem;
    color: var(--alpha--white-50);
    margin-bottom: 1.5rem;
  }

  .marquee-mask {
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent, black 20%, black 80%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 20%, black 80%, transparent);
  }

  .marquee-track {
    display: flex;
    gap: 3rem;
    animation: scroll 30s linear infinite;
    width: max-content;
  }

  .marquee-item {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--alpha--white-50);
    /* Tu peux remplacer le texte par des <img> ici */
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hero-title { font-size: 2rem; }
    .hero-section { padding-top: 6rem; }
  }
</style>