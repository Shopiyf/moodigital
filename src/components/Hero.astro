---
export interface Props {
title?: string;
subtitle?: string;
primaryCtaText?: string;
primaryCtaHref?: string;
secondaryCtaText?: string;
secondaryCtaHref?: string;
}


const {
title = "Automatise ton acquisition avec une landing page qui convertit",
subtitle = "Design premium, animations fluides, perf solide. Une base Astro clean pour ship vite sur Vercel.",
primaryCtaText = "Reserver une demo",
primaryCtaHref = "#contact",
secondaryCtaText = "Voir les fonctionnalites",
secondaryCtaHref = "#features",
} = Astro.props;
---


<section class="hero">
<div class="container hero__grid">
<div class="hero__copy">
<div class="pill" data-reveal>
<span class="hero__spark" aria-hidden="true"></span>
<span>Conversion + perf + UX mobile</span>
</div>


<h1 class="hero__title" data-reveal>{title}</h1>
<p class="hero__subtitle muted" data-reveal>{subtitle}</p>


<div class="hero__cta" data-reveal>
<a class="btn btn-primary" href={primaryCtaHref}>
<span>{primaryCtaText}</span>
<svg class="arrow" viewBox="0 0 24 24" aria-hidden="true">
<path d="M6 18L18 6M18 6H10M18 6V14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
</style>