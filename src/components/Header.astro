---
export interface NavLink {
label: string;
href: string;
}


export interface Props {
brandName?: string;
brandHref?: string;
links?: NavLink[];
ctaText?: string;
ctaHref?: string;
}


const {
brandName = "YourBrand",
brandHref = "/",
links = [
{ label: "Fonctionnalit√©s", href: "#features" },
{ label: "Tarifs", href: "#pricing" },
{ label: "FAQ", href: "#faq" },
{ label: "Contact", href: "#contact" },
],
ctaText = "Reserver une demo",
ctaHref = "#contact",
} = Astro.props;
---


<header class="site-header" data-header data-menu-state="closed">
<div class="container header__inner">
<a class="brand" href={brandHref} aria-label={brandName}>
<span class="brand__mark" aria-hidden="true"></span>
<span class="brand__text">{brandName}</span>
</a>


<nav class="nav" aria-label="Navigation principale">
{links.map((l) => (
<a class="nav__link" href={l.href}>{l.label}</a>
))}
</nav>


<div class="header__actions">
<a class="btn btn-primary" href={ctaHref}>
<span>{ctaText}</span>
<svg class="arrow" viewBox="0 0 24 24" aria-hidden="true">
<path d="M6 18L18 6M18 6H10M18 6V14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
</svg>
</a>


<button class="menu" type="button" aria-label="Ouvrir le menu" aria-expanded="false" data-menu-toggle>
<span class="menu__bar"></span>
<span class="menu__bar"></span>
</button>
</div>
</div>


<div class="mobile" data-mobile>
<div class="mobile__panel card" role="dialog" aria-label="Menu" aria-modal="true">
<div class="mobile__top">
<div class="pill">Menu</div>
<button class="menu menu--close" type="button" aria-label="Fermer le menu" data-menu-close>
</script>