---
// Header.astro
// Mood Digital: fixed floating "ilot" from the first pixel (no wasted space),
// mobile menu = header expands downward (no separate dropdown),
// clean 3-line hamburger morph to X, no blur bugs.

const defaults = {
  brand: "MOODIGITAL",
  homeHref: "/",
  links: [
    { label: "Offres", href: "#pricing" },
    { label: "Process", href: "#process" },
    { label: "FAQ", href: "#faq" },
  ],
  cta: { label: "Reserver une demo", href: "#demo" },
};

const {
  brand = defaults.brand,
  homeHref = defaults.homeHref,
  links = defaults.links,
  cta = defaults.cta,
  showCta = true,
} = Astro.props;
---

<header class="hdr is-top" data-header>
  <a class="skip" href="#main">Aller au contenu</a>

  <div class="dock" data-dock>
    <div class="dock-bg" aria-hidden="true"></div>

    <div class="row">
      <div class="left">
        <a class="brand" href={homeHref} aria-label={`${brand} - Accueil`}>
          <span class="sig" aria-hidden="true"></span>
          <span class="brand-text">{brand}</span>
        </a>
      </div>

      <nav class="nav" aria-label="Navigation principale">
        <ul class="nav-list">
          {links.map((l) => (
            <li class="nav-item"><a class="nav-link" href={l.href}>{l.label}</a></li>
          ))}
        </ul>
      </nav>

      <div class="right">
        {showCta && (
          <a class="btn" href={cta.href}>
            <span class="btn-label">{cta.label}</span>
            <span class="btn-icon" aria-hidden="true">→</span>
            <span class="btn-shine" aria-hidden="true"></span>
          </a>
        )}

        <button class="burger" type="button" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="mobileMenu" data-burger>
          <span class="icon icon-burger" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
              <path fill="currentColor" d="M1 8h30a1 1 0 0 0 0-2H1a1 1 0 0 0 0 2zM31 15H1a1 1 0 0 0 0 2h30a1 1 0 0 0 0-2zM31 24H1a1 1 0 0 0 0 2h30a1 1 0 0 0 0-2z"></path>
            </svg>
          </span>
          <span class="icon icon-close" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 96 96">
              <path fill="currentColor" d="m53.657 48 25.171-25.172a4 4 0 1 0-5.656-5.656L48 42.343 22.829 17.172a4 4 0 0 0-5.657 5.656L42.344 48 17.172 73.172a4 4 0 1 0 5.657 5.656L48 53.657l25.172 25.171C73.953 79.609 74.977 80 76 80s2.048-.391 2.828-1.172a4 4 0 0 0 0-5.656L53.657 48z"></path>
            </svg>
          </span>
        </button>
      </div>
    </div>

    <!-- Mobile menu lives INSIDE the ilot, so the header "expands" downward -->
    <div class="mobile" id="mobileMenu" data-mobile hidden>
      <div class="mobile-clip">
        <div class="mobile-inner">
          <ul class="mobile-list">
            {links.map((l) => (
              <li class="mobile-item">
                <a class="mobile-link" href={l.href} data-mobile-link>
                  <span>{l.label}</span>
                  <span aria-hidden="true">→</span>
                </a>
              </li>
            ))}
          </ul>

          {showCta && (
            <a class="btn full" href={cta.href} data-mobile-link>
              <span class="btn-label">{cta.label}</span>
              <span class="btn-icon" aria-hidden="true">→</span>
              <span class="btn-shine" aria-hidden="true"></span>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>

  <button class="overlay" type="button" aria-label="Fermer le menu" data-overlay hidden></button>
</header>

<script is:inline>
  const header = document.querySelector("[data-header]");
  const dock = document.querySelector("[data-dock]");
  const burger = document.querySelector("[data-burger]");
  const mobile = document.querySelector("[data-mobile]");
  const overlay = document.querySelector("[data-overlay]");
  const mobileLinks = document.querySelectorAll("[data-mobile-link]");

  const reduce = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;

  // Transparent at top, glass after scroll
  if (header) {
    const set = () => {
      const y = window.scrollY || 0;
      header.classList.toggle("is-top", y < 8);
      header.classList.toggle("is-scrolled", y >= 8);
    };

    set();
    let raf = 0;
    window.addEventListener(
      "scroll",
      () => {
        cancelAnimationFrame(raf);
        raf = requestAnimationFrame(set);
      },
      { passive: true }
    );
  }

  function setOpen(next) {
    if (!header || !dock || !burger || !mobile || !overlay) return;

    burger.setAttribute("aria-expanded", String(next));
    header.classList.toggle("menu-active", next);
    dock.classList.toggle("menu-open", next);

    if (next) {
      mobile.hidden = false;
      overlay.hidden = false;

      if (!reduce) {
        requestAnimationFrame(() => {
          mobile.classList.add("open");
          overlay.classList.add("open");
        });
      } else {
        mobile.classList.add("open");
        overlay.classList.add("open");
      }

      document.documentElement.classList.add("menu-open");
    } else {
      mobile.classList.remove("open");
      overlay.classList.remove("open");
      document.documentElement.classList.remove("menu-open");

      if (reduce) {
        mobile.hidden = true;
        overlay.hidden = true;
        return;
      }

      const done = (e) => {
        if (e && e.target !== mobile) return;
        mobile.hidden = true;
        overlay.hidden = true;
        mobile.removeEventListener("transitionend", done);
      };
      mobile.addEventListener("transitionend", done);
    }
  }

  if (burger && mobile && overlay) {
    burger.addEventListener("click", () => {
      const isOpen = burger.getAttribute("aria-expanded") === "true";
      setOpen(!isOpen);
    });

    overlay.addEventListener("click", () => setOpen(false));
    mobileLinks.forEach((a) => a.addEventListener("click", () => setOpen(false)));

    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") setOpen(false);
    });

    window.addEventListener("resize", () => {
      const isOpen = burger.getAttribute("aria-expanded") === "true";
      if (!isOpen) return;
      if (window.innerWidth >= 980) setOpen(false);
    });
  }
</script>

<style>
  :root {
    --text: #f3f3f4;
    --muted: rgba(243, 243, 244, 0.72);
    --cream: #e3dbcf;
    --orange: #e6730a;
    --bg0: #070607;
    --bg1: #0c0a08;
    --glass: rgba(255, 255, 255, 0.06);
    --grid: clamp(38px, 6vw, 58px);
    --ease: cubic-bezier(0.16, 1, 0.3, 1);
  }

  * { box-sizing: border-box; }

  /* Overlay header: does not consume layout height */
  .hdr {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 200;
    padding: calc(env(safe-area-inset-top) + 0.7rem) 1rem 0.6rem;
    pointer-events: none;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  }

  .skip {
    position: absolute;
    left: -9999px;
    top: 0;
    background: var(--cream);
    color: #0b0a08;
    padding: 0.6rem 0.9rem;
    border-radius: 10px;
    pointer-events: auto;
  }

  .skip:focus { left: 1rem; top: 0.75rem; z-index: 260; }

  .dock {
    width: min(1060px, 100%);
    margin: 0 auto;
    position: relative;
    border-radius: 999px;
    pointer-events: auto;
    transition: border-radius 0.35s var(--ease);
  }

  .dock.menu-open {
    border-radius: 26px;
    overflow: hidden; /* makes the expansion feel like one single component */
  }

  .dock-bg {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    pointer-events: none;

    background:
      radial-gradient(700px 120px at 18% 0%, rgba(230,115,10,0.24), transparent 72%),
      radial-gradient(720px 140px at 82% 0%, rgba(227,219,207,0.16), transparent 72%),
      radial-gradient(360px 240px at 50% 0%, rgba(35,32,30,0.46), transparent 75%),
      linear-gradient(180deg, rgba(12,10,8,0.9), rgba(7,6,7,0.7));

    border: 1px solid rgba(255,255,255,0.12);
    box-shadow:
      0 20px 70px rgba(0,0,0,0.40),
      inset 0 1px 0 rgba(255,255,255,0.10);

    backdrop-filter: blur(16px);
    transition: background 0.35s var(--ease), border-color 0.35s var(--ease), box-shadow 0.35s var(--ease), backdrop-filter 0.35s var(--ease);
  }

  .dock-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 0.23;
    background:
      repeating-linear-gradient(0deg, rgba(227,219,207,0.08) 0 1px, transparent 1px var(--grid)),
      repeating-linear-gradient(90deg, rgba(227,219,207,0.08) 0 1px, transparent 1px var(--grid));
    mask-image: radial-gradient(120% 120% at 50% 0%, #000 55%, transparent 100%);
    -webkit-mask-image: radial-gradient(120% 120% at 50% 0%, #000 55%, transparent 100%);
    transition: opacity 0.35s var(--ease);
  }

  .dock::after {
    content: "";
    position: absolute;
    inset: 1px;
    border-radius: inherit;
    pointer-events: none;
    background-image:
      repeating-radial-gradient(circle at 20% 40%, rgba(255,255,255,0.18) 0 1px, transparent 1px 9px),
      repeating-radial-gradient(circle at 78% 32%, rgba(0,0,0,0.4) 0 1px, transparent 1px 9px);
    opacity: 0.14;
    mix-blend-mode: overlay;
    z-index: 0;
  }

  .row {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 0.85rem;
    padding: 0.72rem 0.95rem;
  }

  .left { justify-self: start; min-width: 0; }
  .right { justify-self: end; display: inline-flex; align-items: center; gap: 0.6rem; }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    text-decoration: none;
    color: var(--text);
    min-width: 0;
  }

  .sig {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: var(--orange);
    box-shadow: 0 0 0 7px rgba(230,115,10,0.12);
    flex: 0 0 auto;
  }

  .brand-text {
    font-weight: 820;
    letter-spacing: 0.22em;
    font-size: 0.95rem;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .nav { display: flex; justify-content: center; }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: inline-flex;
    align-items: center;
    gap: clamp(0.55rem, 1.8vw, 1.25rem);
  }

  .nav-link {
    position: relative;
    display: inline-flex;
    padding: 0.55rem 0.45rem;
    text-decoration: none;
    color: var(--muted);
    font-weight: 680;
    transition: color 0.25s var(--ease);
  }

  .nav-link:hover { color: rgba(243,243,244,1); }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0.22rem;
    width: 0;
    height: 2px;
    border-radius: 999px;
    background: linear-gradient(90deg, rgba(227,219,207,0.0), rgba(227,219,207,0.9), rgba(230,115,10,0.95));
    transform: translateX(-50%);
    transition: width 0.28s var(--ease);
  }

  .nav-link:hover::after { width: 100%; }

  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.65rem;
    padding: clamp(0.82rem, 2vw, 0.94rem) clamp(1.05rem, 3.6vw, 1.65rem);
    border-radius: 999px;
    text-decoration: none;
    font-weight: 760;
    font-size: clamp(0.95rem, 2.1vw, 1rem);
    line-height: 1.12;
    border: 1px solid rgba(227,219,207,0.78);
    background: var(--cream);
    color: #0b0a08;
    box-shadow: 0 22px 70px rgba(0,0,0,0.40);
    overflow: hidden;
    transition: transform 0.3s var(--ease), box-shadow 0.3s var(--ease), background 0.3s var(--ease), border-color 0.3s var(--ease);
    transform: translate3d(0,0,0);
    white-space: nowrap;
  }

  .btn:hover { transform: translateY(-2px); box-shadow: 0 30px 92px rgba(0,0,0,0.55); }

  .btn-icon { transition: transform 0.25s var(--ease); }
  .btn:hover .btn-icon { transform: translateX(4px); }

  .btn-shine {
    position: absolute;
    inset: -2px;
    pointer-events: none;
    background: linear-gradient(115deg, transparent 0%, rgba(255,255,255,0.00) 38%, rgba(255,255,255,0.35) 50%, rgba(255,255,255,0.00) 62%, transparent 100%);
    transform: translateX(-130%);
    opacity: 0.7;
  }

  .btn:hover .btn-shine { animation: shine 0.9s var(--ease) forwards; }
  @keyframes shine { to { transform: translateX(130%); } }

  /* Burger button + provided SVG icons */
  .burger {
    width: 44px;
    height: 44px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.12);
    background: rgba(255,255,255,0.03);
    display: none;
    align-items: center;
    justify-content: center;
    padding: 0;
    cursor: pointer;
    backdrop-filter: blur(10px);
    color: rgba(243,243,244,0.92);
    position: relative;
    overflow: hidden;
    transition: background 0.25s var(--ease), border-color 0.25s var(--ease), transform 0.25s var(--ease);
  }

  .burger:hover {
    background: rgba(255,255,255,0.06);
    border-color: rgba(255,255,255,0.20);
    transform: translateY(-1px);
  }

  .icon {
    position: absolute;
    inset: 0;
    display: grid;
    place-items: center;
    transition: opacity 0.22s var(--ease), transform 0.22s var(--ease);
  }

  .icon svg {
    width: 18px;
    height: 18px;
    display: block;
  }

  .icon-burger { opacity: 1; transform: scale(1) rotate(0deg); }
  .icon-close { opacity: 0; transform: scale(0.92) rotate(-8deg); }

  .burger[aria-expanded="true"] .icon-burger { opacity: 0; transform: scale(0.92) rotate(8deg); }
  .burger[aria-expanded="true"] .icon-close { opacity: 1; transform: scale(1) rotate(0deg); }

/* Top state: transparent, BUT if menu opens, we force the glass so it is visible */
  .hdr.is-top .dock-bg { background: transparent; border-color: transparent; box-shadow: none; backdrop-filter: none; }
  .hdr.is-top .dock-bg::before { opacity: 0; }

  .hdr.menu-active .dock-bg {
    background:
      radial-gradient(700px 120px at 18% 0%, rgba(230,115,10,0.24), transparent 72%),
      radial-gradient(720px 140px at 82% 0%, rgba(227,219,207,0.16), transparent 72%),
      radial-gradient(360px 240px at 50% 0%, rgba(35,32,30,0.46), transparent 75%),
      linear-gradient(180deg, rgba(12,10,8,0.9), rgba(7,6,7,0.7));
    border: 1px solid rgba(255,255,255,0.12);
    box-shadow:
      0 20px 70px rgba(0,0,0,0.40),
      inset 0 1px 0 rgba(255,255,255,0.10);
    backdrop-filter: blur(16px);
  }

  .hdr.menu-active .dock-bg::before { opacity: 0.23; }

  /* Mobile: expansion panel inside dock */
  .mobile {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-rows: 0fr;
    opacity: 0;
    transform: translateY(-6px);
    transition: grid-template-rows 0.32s var(--ease), opacity 0.28s var(--ease), transform 0.32s var(--ease);
    border-top: 1px solid rgba(255,255,255,0.08);
  }

  .mobile.open {
    grid-template-rows: 1fr;
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-clip { overflow: hidden; }

  .mobile-inner {
    padding: 0.9rem 0.95rem 1.05rem;
    display: grid;
    gap: 0.7rem;
  }

  .mobile-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.35rem;
  }

  .mobile-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.95rem 0.85rem;
    border-radius: 14px;
    text-decoration: none;
    color: rgba(243,243,244,0.92);
    border: 1px solid rgba(255,255,255,0.08);
    background: rgba(255,255,255,0.02);
    transition: background 0.25s var(--ease), border-color 0.25s var(--ease);
  }

  .mobile-link:hover { background: rgba(255,255,255,0.05); border-color: rgba(255,255,255,0.16); }

  .full { width: 100%; }

  /* Overlay: darken only, no blur (fixes the blur bug) */
  .overlay {
    position: fixed;
    inset: 0;
    z-index: 150;
    background: rgba(0,0,0,0.48);
    opacity: 0;
    transition: opacity 0.22s var(--ease);
    pointer-events: none;
    border: 0;
    padding: 0;
  }

  .overlay.open { opacity: 1; pointer-events: auto; }

  /* Ensure the dock stays above overlay so the menu is NEVER blurred/covered */
  .dock { z-index: 210; }

  @media (max-width: 980px) {
    .nav { display: none; }
    .burger { display: inline-flex; }
  }

  @media (max-width: 560px) {
    .row { grid-template-columns: 1fr auto; }
    .right .btn { display: none; }
    .brand-text { letter-spacing: 0.18em; font-size: 0.9rem; }
  }

  @media (prefers-reduced-motion: reduce) {
    .dock, .dock-bg, .nav-link, .btn, .burger, .mobile, .overlay { transition: none; }
    .btn-shine { display: none; }
  }

  :global(html.menu-open) { overflow: hidden; }
</style>
