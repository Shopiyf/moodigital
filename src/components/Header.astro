---
// Header.astro
// Mood Digital: true floating "ilot" from the first pixel (no wasted space), fixed overlay header,
// rock-solid mobile menu (no layout push), centered nav, glass on scroll.

const defaults = {
  brand: "MOODIGITAL",
  homeHref: "/",
  links: [
    { label: "Offres", href: "#pricing" },
    { label: "Process", href: "#process" },
    { label: "FAQ", href: "#faq" },
  ],
  cta: { label: "Reserver une demo", href: "#demo" },
};

const {
  brand = defaults.brand,
  homeHref = defaults.homeHref,
  links = defaults.links,
  cta = defaults.cta,
  showCta = true,
} = Astro.props;
---

<header class="hdr is-top" data-header>
  <a class="skip" href="#main">Aller au contenu</a>

  <div class="dock" data-dock>
    <div class="dock-bg" aria-hidden="true"></div>

    <div class="row">
      <div class="left">
        <a class="brand" href={homeHref} aria-label={`${brand} - Accueil`}>
          <span class="sig" aria-hidden="true"></span>
          <span class="brand-text">{brand}</span>
        </a>
      </div>

      <nav class="nav" aria-label="Navigation principale">
        <ul class="nav-list">
          {links.map((l) => (
            <li class="nav-item"><a class="nav-link" href={l.href}>{l.label}</a></li>
          ))}
        </ul>
      </nav>

      <div class="right">
        {showCta && (
          <a class="btn" href={cta.href}>
            <span class="btn-label">{cta.label}</span>
            <span class="btn-icon" aria-hidden="true">→</span>
            <span class="btn-shine" aria-hidden="true"></span>
          </a>
        )}

        <button class="burger" type="button" aria-label="Ouvrir le menu" aria-expanded="false" aria-controls="mobileMenu" data-burger>
          <span class="b" aria-hidden="true"></span>
          <span class="b" aria-hidden="true"></span>
        </button>
      </div>
    </div>

    <div class="mobile" id="mobileMenu" data-mobile hidden>
      <div class="mobile-inner">
        <ul class="mobile-list">
          {links.map((l) => (
            <li class="mobile-item"><a class="mobile-link" href={l.href} data-mobile-link>{l.label}<span aria-hidden="true">→</span></a></li>
          ))}
        </ul>

        {showCta && (
          <a class="btn full" href={cta.href} data-mobile-link>
            <span class="btn-label">{cta.label}</span>
            <span class="btn-icon" aria-hidden="true">→</span>
            <span class="btn-shine" aria-hidden="true"></span>
          </a>
        )}
      </div>
    </div>
  </div>

  <button class="backdrop" type="button" aria-label="Fermer le menu" data-backdrop hidden></button>
</header>

<script is:inline>
  const header = document.querySelector("[data-header]");
  const burger = document.querySelector("[data-burger]");
  const mobile = document.querySelector("[data-mobile]");
  const backdrop = document.querySelector("[data-backdrop]");
  const mobileLinks = document.querySelectorAll("[data-mobile-link]");

  const reduce = window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;

  // Glass after scroll, transparent at top
  if (header) {
    const set = () => {
      const y = window.scrollY || 0;
      header.classList.toggle("is-top", y < 8);
      header.classList.toggle("is-scrolled", y >= 8);
    };

    set();
    let raf = 0;
    window.addEventListener(
      "scroll",
      () => {
        cancelAnimationFrame(raf);
        raf = requestAnimationFrame(set);
      },
      { passive: true }
    );
  }

  function setOpen(next) {
    if (!burger || !mobile || !backdrop) return;
    burger.setAttribute("aria-expanded", String(next));

    if (next) {
      // Show
      mobile.hidden = false;
      backdrop.hidden = false;

      if (!reduce) {
        requestAnimationFrame(() => {
          mobile.classList.add("open");
          backdrop.classList.add("open");
        });
      } else {
        mobile.classList.add("open");
        backdrop.classList.add("open");
      }

      document.documentElement.classList.add("menu-open");
    } else {
      // Hide
      mobile.classList.remove("open");
      backdrop.classList.remove("open");
      document.documentElement.classList.remove("menu-open");

      if (reduce) {
        mobile.hidden = true;
        backdrop.hidden = true;
        return;
      }

      const done = (e) => {
        // Only when the menu panel finishes
        if (e && e.target !== mobile) return;
        mobile.hidden = true;
        backdrop.hidden = true;
        mobile.removeEventListener("transitionend", done);
      };
      mobile.addEventListener("transitionend", done);
    }
  }

  if (burger && mobile && backdrop) {
    burger.addEventListener("click", () => {
      const isOpen = burger.getAttribute("aria-expanded") === "true";
      setOpen(!isOpen);
    });

    backdrop.addEventListener("click", () => setOpen(false));

    mobileLinks.forEach((a) => a.addEventListener("click", () => setOpen(false)));

    window.addEventListener("keydown", (e) => {
      if (e.key === "Escape") setOpen(false);
    });

    // Close if resized to desktop
    window.addEventListener("resize", () => {
      const isOpen = burger.getAttribute("aria-expanded") === "true";
      if (!isOpen) return;
      if (window.innerWidth >= 980) setOpen(false);
    });
  }
</script>

<style>
  :root {
    --bg0: #070607;
    --bg1: #0c0a08;

    --text: #f3f3f4;
    --cream: #e3dbcf;
    --orange: #e6730a;

    --ease: cubic-bezier(0.16, 1, 0.3, 1);
  }

  * { box-sizing: border-box; }

  /* True overlay header: no layout space above the hero */
  .hdr {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 120;
    padding: calc(env(safe-area-inset-top) + 0.7rem) 1rem 0.6rem;
    pointer-events: none;
  }

  .skip {
    position: absolute;
    left: -9999px;
    top: 0;
    background: var(--cream);
    color: #0b0a08;
    padding: 0.6rem 0.9rem;
    border-radius: 10px;
    pointer-events: auto;
  }

  .skip:focus { left: 1rem; top: 0.75rem; z-index: 200; }

  .dock {
    width: min(1060px, 100%);
    margin: 0 auto;
    border-radius: 999px;
    position: relative;
    pointer-events: auto;
  }

  .dock-bg {
    position: absolute;
    inset: 0;
    border-radius: 999px;
    pointer-events: none;

    background:
      radial-gradient(700px 120px at 20% 0%, rgba(230,115,10,0.22), transparent 70%),
      radial-gradient(700px 120px at 80% 0%, rgba(227,219,207,0.14), transparent 70%),
      linear-gradient(180deg, rgba(12,10,8,0.82), rgba(7,6,7,0.62));

    border: 1px solid rgba(255,255,255,0.12);
    box-shadow:
      0 20px 70px rgba(0,0,0,0.40),
      inset 0 1px 0 rgba(255,255,255,0.10);

    backdrop-filter: blur(16px);

    transition: background 0.35s var(--ease), border-color 0.35s var(--ease), box-shadow 0.35s var(--ease), backdrop-filter 0.35s var(--ease);
  }

  .dock-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 999px;
    opacity: 0.23;
    background:
      repeating-linear-gradient(0deg, rgba(227,219,207,0.08) 0 1px, transparent 1px 56px),
      repeating-linear-gradient(90deg, rgba(227,219,207,0.08) 0 1px, transparent 1px 56px);
    mask-image: radial-gradient(120% 120% at 50% 0%, #000 55%, transparent 100%);
    -webkit-mask-image: radial-gradient(120% 120% at 50% 0%, #000 55%, transparent 100%);
    transition: opacity 0.35s var(--ease);
  }

  .row {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr auto 1fr; /* nav stays centered */
    align-items: center;
    gap: 0.85rem;
    padding: 0.72rem 0.95rem;
  }

  .left { justify-self: start; min-width: 0; }
  .right { justify-self: end; display: inline-flex; align-items: center; gap: 0.6rem; min-width: 0; }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    text-decoration: none;
    color: var(--text);
    min-width: 0;
  }

  .sig {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: var(--orange);
    box-shadow: 0 0 0 7px rgba(230,115,10,0.12);
    flex: 0 0 auto;
  }

  .brand-text {
    font-weight: 820;
    letter-spacing: 0.22em;
    font-size: 0.95rem;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .nav { display: flex; justify-content: center; }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: inline-flex;
    align-items: center;
    gap: clamp(0.55rem, 1.8vw, 1.25rem);
  }

  .nav-link {
    position: relative;
    display: inline-flex;
    padding: 0.55rem 0.45rem;
    text-decoration: none;
    color: rgba(243,243,244,0.88);
    font-weight: 680;
    transition: color 0.25s var(--ease);
  }

  .nav-link:hover { color: rgba(243,243,244,1); }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0.22rem;
    width: 0;
    height: 2px;
    border-radius: 999px;
    background: linear-gradient(90deg, rgba(227,219,207,0.0), rgba(227,219,207,0.9), rgba(230,115,10,0.95));
    transform: translateX(-50%);
    transition: width 0.28s var(--ease);
  }

  .nav-link:hover::after { width: 100%; }

  .btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.55rem;
    padding: 0.72rem 1.05rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 760;
    border: 1px solid rgba(227,219,207,0.78);
    background: var(--cream);
    color: #0b0a08;
    box-shadow: 0 18px 60px rgba(0,0,0,0.35);
    overflow: hidden;
    transition: transform 0.3s var(--ease), box-shadow 0.3s var(--ease);
    transform: translate3d(0,0,0);
    max-width: 100%;
    white-space: nowrap;
  }

  .btn:hover { transform: translateY(-2px); box-shadow: 0 28px 85px rgba(0,0,0,0.55); }

  .btn-icon { transition: transform 0.25s var(--ease); }
  .btn:hover .btn-icon { transform: translateX(4px); }

  .btn-shine {
    position: absolute;
    inset: -2px;
    pointer-events: none;
    background: linear-gradient(115deg, transparent 0%, rgba(255,255,255,0.00) 38%, rgba(255,255,255,0.35) 50%, rgba(255,255,255,0.00) 62%, transparent 100%);
    transform: translateX(-130%);
    opacity: 0.7;
  }

  .btn:hover .btn-shine { animation: shine 0.9s var(--ease) forwards; }
  @keyframes shine { to { transform: translateX(130%); } }

  .burger {
    width: 44px;
    height: 44px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.12);
    background: rgba(255,255,255,0.03);
    color: var(--text);
    display: none;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 0;
    backdrop-filter: blur(10px);
    cursor: pointer;
    transition: background 0.25s var(--ease), border-color 0.25s var(--ease), transform 0.25s var(--ease);
    position: relative;
  }

  .burger:hover { background: rgba(255,255,255,0.06); border-color: rgba(255,255,255,0.20); transform: translateY(-1px); }

  .b {
    width: 18px;
    height: 2px;
    border-radius: 999px;
    background: rgba(243,243,244,0.92);
    display: block;
    transition: transform 0.28s var(--ease), opacity 0.28s var(--ease);
    transform-origin: center;
  }

  /* Burger morph to X when open */
  .burger[aria-expanded="true"] .b:nth-child(1) { transform: translateY(4px) rotate(45deg); }
  .burger[aria-expanded="true"] .b:nth-child(2) { transform: translateY(-4px) rotate(-45deg); }

  /* Top state: transparent (still "ilot", but no glass) */
  .hdr.is-top .dock-bg {
    background: transparent;
    border-color: transparent;
    box-shadow: none;
    backdrop-filter: none;
  }

  .hdr.is-top .dock-bg::before { opacity: 0; }

  /* Mobile menu: absolutely positioned so it never pushes the page */
  .mobile {
    position: absolute;
    left: 0;
    right: 0;
    top: calc(100% + 0.55rem);

    border-radius: 22px;
    border: 1px solid rgba(255,255,255,0.10);
    background: rgba(7,6,7,0.82);
    backdrop-filter: blur(16px);

    transform-origin: top;
    transform: translateY(-6px);
    opacity: 0;
    pointer-events: none;

    transition: transform 0.32s var(--ease), opacity 0.32s var(--ease);
  }

  .mobile.open {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-inner {
    padding: 1rem 1rem 1.05rem;
    display: grid;
    gap: 0.75rem;
  }

  .mobile-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.25rem;
  }

  .mobile-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.95rem 0.85rem;
    border-radius: 14px;
    text-decoration: none;
    color: rgba(243,243,244,0.90);
    border: 1px solid rgba(255,255,255,0.08);
    background: rgba(255,255,255,0.02);
    transition: background 0.25s var(--ease), border-color 0.25s var(--ease);
  }

  .mobile-link:hover { background: rgba(255,255,255,0.05); border-color: rgba(255,255,255,0.16); }

  .full { width: 100%; }

  /* Backdrop for reliable close + prevents ghost clicks on hero */
  .backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.38);
    backdrop-filter: blur(2px);
    opacity: 0;
    transition: opacity 0.25s var(--ease);
    pointer-events: none;
    border: 0;
    padding: 0;
  }

  .backdrop.open { opacity: 1; pointer-events: auto; }

  /* Responsive */
  @media (max-width: 980px) {
    .nav { display: none; }
    .burger { display: inline-flex; }
  }

  @media (max-width: 560px) {
    .row { grid-template-columns: 1fr auto; }
    .right .btn { display: none; }
    .brand-text { letter-spacing: 0.18em; font-size: 0.9rem; }
  }

  @media (prefers-reduced-motion: reduce) {
    .dock-bg, .nav-link, .btn, .burger, .mobile, .backdrop { transition: none; }
    .btn-shine { display: none; }
  }

  :global(html.menu-open) { overflow: hidden; }
</style>