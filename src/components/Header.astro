<style is:global>
    /* On définit les variables pour TOUT le site ici */
    :root {
        --bg-dark: #070607;
        --text-main: #f3f3f4;
        --text-muted: #b3b3b8;
        --accent-gold: #d9a441;
        --accent-light: #ffcc6a;
        --glass-border: rgba(255, 255, 255, 0.08);
        
        /* La police magique */
        --font-main: 'Inter', system-ui, -apple-system, sans-serif;
        
        /* La fluidité */
        --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Reset de base pour enlever les marges moches */
    html, body {
        margin: 0;
        padding: 0;
        background-color: var(--bg-dark);
        color: var(--text-main);
        font-family: var(--font-main); /* On applique la police partout */
        overflow-x: hidden; /* Empêche le scroll horizontal accidentel */
        scroll-behavior: smooth;
    }

    /* On s'assure que les titres sont beaux partout */
    h1, h2, h3, h4, .brand {
        font-family: var(--font-main);
        letter-spacing: -0.03em; /* Resserre un peu les lettres pour faire "pro" */
    }

    /* Amélioration de la barre de défilement (Scrollbar) */
    ::-webkit-scrollbar {
        width: 10px;
    }
    ::-webkit-scrollbar-track {
        background: var(--bg-dark);
    }
    ::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 5px;
        border: 2px solid var(--bg-dark);
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #555;
    }
</style>