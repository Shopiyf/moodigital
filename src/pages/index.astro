---
// src/pages/index.astro
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import MoodDigitalCestQuoi from "../components/MoodDigitalCestQuoi.astro";
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Mood Digital</title>
    <style>
      body { margin: 0; background: #070707; }
    </style>
  </head>

  <body>
    <Header
      brand="MOODIGITAL"
      nav={[
        { label: "Offres", href: "#offres" },
        { label: "Process", href: "#process" },
        { label: "FAQ", href: "#faq" },
      ]}
      ctaLabel="Reserver une demo"
      ctaHref="https://calendar.app.google/WB2zRZTbEGVMECN38"
    />

    <Hero />

    <main id="content">
      <MoodDigitalCestQuoi
        ctaHref="https://calendar.app.google/WB2zRZTbEGVMECN38"
        ctaLabel="Reserve ton appel decouverte"
        secondaryHref="#offres"
        secondaryLabel="Voir les offres"
      />
    </main>
  </body>
</html>
